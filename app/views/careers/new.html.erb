<% content_for :title, "New Career" %>

<h1>Add a New Career</h1>

<div class="row">
	<div class="large 6-columns">
		<form>
			<%= form_for(@career) do |c| %>

		      <%= c.label :name %>
		      <%= c.text_field :name %>

		      <%= c.label :school_length %>
		      <%= c.text_field :school_length %>

		      <%= c.submit "Add Career", class: "button" %>
		    <% end %>
		</form>
	</div>
</div>

